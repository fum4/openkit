{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "agent",
  "projectType": "library",
  "sourceRoot": "libs/agent/src",
  "implicitDependencies": ["instructions", "server", "shared"],
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsc --noEmit -p tsconfig.json"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec oxlint libs/agent/src"
      }
    }
  }
}
