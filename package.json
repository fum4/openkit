{
  "name": "openkit",
  "version": "0.0.10",
  "private": true,
  "description": "Your local kit for agentic development",
  "homepage": "https://dawg-chi.vercel.app/",
  "type": "module",
  "scripts": {
    "setup": "sh ./scripts/setup.sh",
    "start": "node apps/cli/dist/cli/index.js",
    "dev": "pnpm nx run-many -t dev --projects cli,server,web-app,desktop-app,website,mobile-app --parallel=6",
    "dev:cli": "pnpm nx run cli:dev",
    "dev:server": "pnpm nx run server:dev",
    "dev:website": "pnpm nx run website:dev",
    "dev:web-app": "pnpm nx run-many -t dev --projects server,web-app --parallel=2",
    "dev:mobile-app": "pnpm nx run mobile-app:dev",
    "dev:desktop-app": "pnpm nx run-many -t dev --projects web-app,cli,desktop-app --parallel=3",
    "build": "pnpm nx run-many -t build --projects cli,server,web-app,desktop-app,website,mobile-app",
    "build:cli": "pnpm nx run cli:build",
    "build:server": "pnpm nx run server:build",
    "build:website": "pnpm nx run website:build",
    "build:web-app": "pnpm nx run web-app:build",
    "build:mobile-app": "pnpm nx run mobile-app:build",
    "build:desktop-app": "pnpm nx run desktop-app:build",
    "package:desktop": "pnpm nx run desktop-app:package",
    "package:desktop:mac": "pnpm nx run desktop-app:package-mac",
    "package:desktop:linux": "pnpm nx run desktop-app:package-linux",
    "check:lint": "pnpm nx run-many -t lint --projects cli,server,web-app,desktop-app,website,mobile-app",
    "check:types": "pnpm nx run-many -t typecheck --projects cli,server,web-app,desktop-app,website,mobile-app",
    "check:format": "oxfmt --check .",
    "check:all": "pnpm check:types && pnpm check:format && pnpm check:lint",
    "fix:format": "oxfmt .",
    "fix:lint": "oxlint --fix",
    "fix:all": "pnpm fix:format && pnpm fix:lint",
    "nx": "nx",
    "nx:show": "nx show projects",
    "nx:graph": "nx graph",
    "nx:affected": "nx affected -t lint,typecheck,build",
    "release:verify": "pnpm check:types && pnpm check:lint && pnpm build",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.3.0",
    "@modelcontextprotocol/sdk": "^1.27.1",
    "node-pty": "1.2.0-beta.10",
    "picocolors": "^1.1.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nx": "^22.5.2",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "release-it": "^19.2.4",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx}": [
      "oxfmt --check",
      "oxlint"
    ],
    "*.{css,html,json,md,mdx,scss,yaml,yml}": "oxfmt --check"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.17.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "electron",
      "node-pty"
    ]
  }
}
