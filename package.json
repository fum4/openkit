{
  "name": "openkit",
  "version": "0.0.9",
  "description": "Your local kit for agentic development",
  "keywords": [
    "agent",
    "ai",
    "cli",
    "developer-tools",
    "git",
    "kit",
    "worktree"
  ],
  "homepage": "https://github.com/fum4/openkit#readme",
  "bugs": {
    "url": "https://github.com/fum4/openkit/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fum4/openkit.git"
  },
  "bin": {
    "ok": "dist/cli/index.js",
    "openkit": "dist/cli/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "main": "dist/electron/main.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "node dist/cli/index.js",
    "dev": "pnpm dev:all",
    "dev:all": "concurrently -k -n ui,backend,electron:compile,electron:run -c blue,green,yellow,magenta \"pnpm dev:ui\" \"pnpm dev:backend\" \"pnpm dev:electron:compile\" \"pnpm dev:electron:run\"",
    "dev:ui": "vite",
    "dev:backend": "tsup --watch",
    "dev:electron:compile": "mkdir -p dist/electron && cp electron/preload.cjs dist/electron/preload.cjs && tsc -p electron/tsconfig.json --watch --preserveWatchOutput",
    "dev:electron:run": "wait-on http://localhost:6969 dist/electron/main.js && UI_DEV_SERVER_URL=http://localhost:6969 VITE_DEV_SERVER=1 electronmon .",
    "build": "tsup --dts --clean && tsc -p electron/tsconfig.json && cp electron/preload.cjs dist/electron/preload.cjs && mkdir -p dist/runtime && cp src/runtime/port-hook.cjs dist/runtime/port-hook.cjs && vite build",
    "build:app": "pnpm build:app:mac && pnpm build:app:linux",
    "build:app:mac": "pnpm build && electron-builder --mac --publish never",
    "build:app:linux": "pnpm build && electron-builder --linux AppImage --publish never",
    "lint-staged": "lint-staged",
    "check:lint": "oxlint",
    "check:types": "tsc --noEmit",
    "check:format": "oxfmt --check .",
    "check:all": "pnpm check:types && pnpm check:format && pnpm check:lint",
    "fix:format": "oxfmt .",
    "fix:lint": "oxlint --fix",
    "fix:all": "pnpm fix:format && pnpm fix:lint",
    "verify:package": "node scripts/verify-package.mjs",
    "smoke:tarball": "node scripts/smoke-tarball.mjs",
    "release:verify": "pnpm check:types && pnpm check:lint && pnpm build && pnpm verify:package && pnpm smoke:tarball",
    "prepack": "pnpm build && pnpm verify:package",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/node-ws": "^1.3.0",
    "@inquirer/prompts": "^8.3.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@monaco-editor/react": "^4.7.0",
    "@tanstack/react-query": "^5.90.21",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "ansi-to-html": "^0.7.2",
    "hono": "^4.12.2",
    "lucide-react": "^0.575.0",
    "motion": "^12.34.2",
    "nanoid": "^5.1.6",
    "node-pty": "1.2.0-beta.10",
    "picocolors": "^1.1.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.1",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "electronmon": "^2.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "postcss": "^8.4.38",
    "release-it": "^19.2.4",
    "tailwindcss": "^4.2.1",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.5.4",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx}": [
      "oxfmt --check",
      "oxlint"
    ],
    "*.{css,html,json,md,mdx,scss,yaml,yml}": "oxfmt --check"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "electron",
      "node-pty"
    ]
  }
}
