{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@openkit/agent/*": ["libs/agent/src/*"],
      "@openkit/cli/*": ["apps/cli/src/*"],
      "@openkit/core/*": ["libs/core/src/*"],
      "@openkit/instructions": ["libs/instructions/src/index.ts"],
      "@openkit/instructions/*": ["libs/instructions/src/*"],
      "@openkit/integrations/*": ["libs/integrations/src/*"],
      "@openkit/server/*": ["apps/server/src/*"],
      "@openkit/shared/*": ["libs/shared/src/*"]
    },
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "outDir": "dist",
    "jsx": "react-jsx"
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "apps/**/*.cjs",
    "libs/**/*.ts",
    "libs/**/*.tsx",
    "libs/**/*.cjs",
    "packages/**/*.ts",
    "global.d.ts",
    "md.d.ts"
  ],
  "exclude": ["node_modules", "dist", "apps/mobile-app/**", "apps/website/**"]
}
