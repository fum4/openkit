---
import DownloadSplitButton from "./DownloadSplitButton.astro";
---

<div class="section-divider"></div>
<section id="download">
  <div class="container">
    <h2 class="section-title fade-in"><svg class="title-icon" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg>Download OpenKit</h2>
    <p class="section-sub fade-in" data-delay="80">
      Default selection follows your device. Use the right-side selector for all released builds.
    </p>
    <div class="download-card fade-in" data-delay="160">
      <div class="download-main">
        <DownloadSplitButton buttonId="download-btn" className="section-download glow-pulse" />
      </div>
      <p class="download-hint">Click the right side of the button to choose another package.</p>
      <div class="cli-section">
        <span class="cli-label">Or install via CLI</span>
        <div class="cli-row">
          <span class="cli-dollar">$</span>
          <code>npm install -g openkit</code>
          <button
            class="copy-btn"
            data-copy="npm install -g openkit"
            aria-label="Copy install command"
          >
            <svg
              class="copy-icon"
              width="14"
              height="14"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
            <svg
              class="check-icon"
              width="14"
              height="14"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </button>
        </div>
      </div>
      <a
        href="https://github.com/fum4/OpenKit/releases"
        target="_blank"
        rel="noopener"
        class="releases-link"
      >
        View all releases on GitHub &rarr;
      </a>
    </div>
  </div>
</section>

<style>
  .section-title {
    font-size: 36px;
    text-align: center;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
  }

  .title-icon {
    color: var(--text-muted);
  }

  .section-sub {
    font-size: 14px;
    color: var(--text-muted);
    text-align: center;
    margin-bottom: 40px;
  }

  .download-card {
    max-width: 440px;
    margin: 0 auto;
    background: var(--bg-panel);
    border: 1px solid var(--border-subtle);
    border-radius: 16px;
    padding: 32px;
    text-align: center;
  }

  .download-main {
    margin-bottom: 24px;
    display: flex;
    justify-content: center;
  }

  .section-download {
    width: 100%;
    max-width: 420px;
  }

  .section-download .download-main-btn {
    justify-content: center;
    width: calc(100% - 44px);
  }

  .download-hint {
    font-size: 12px;
    color: var(--text-muted);
    margin: -8px 0 20px;
  }

  .cli-section {
    padding-top: 24px;
    border-top: 1px solid var(--border-subtle);
  }

  .cli-label {
    display: block;
    font-size: 12px;
    color: var(--text-muted);
    margin-bottom: 12px;
    letter-spacing: 0.02em;
  }

  .cli-row {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 9px 12px 9px 14px;
    background: var(--bg-raised);
    border: 1px solid var(--border-subtle);
    border-radius: 8px;
    font-size: 13px;
    transition: border-color 0.2s var(--ease-out-quart);
  }

  .cli-row:hover {
    border-color: var(--border-medium);
  }

  .cli-dollar {
    color: var(--text-muted);
    font-family: var(--font-mono);
    font-size: 12px;
    user-select: none;
  }

  .cli-row code {
    color: var(--text-secondary);
    font-size: 13px;
  }

  .copy-btn {
    position: relative;
    background: none;
    border: none;
    color: var(--text-muted);
    cursor: pointer;
    padding: 4px;
    display: flex;
    transition: color 0.2s var(--ease-out-quart);
    border-radius: 4px;
  }

  .copy-btn:hover {
    color: var(--accent);
    background: rgba(45, 212, 191, 0.08);
  }

  .copy-btn .check-icon {
    display: none;
    color: var(--accent);
  }

  .copy-btn.copied .copy-icon {
    display: none;
  }

  .copy-btn.copied .check-icon {
    display: block;
  }

  .releases-link {
    display: inline-block;
    margin-top: 20px;
    font-size: 13px;
    color: var(--text-muted) !important;
    transition: color 0.2s var(--ease-out-quart) !important;
  }

  .releases-link:hover {
    color: var(--accent) !important;
  }

  @media (max-width: 768px) {
    .download-card {
      padding: 24px;
    }

    .section-title {
      font-size: 28px;
    }

    .section-download .download-main-btn {
      justify-content: flex-start;
    }
  }
</style>
