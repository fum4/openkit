---
interface Props {
  buttonId: string;
  className?: string;
}

const { buttonId, className = "" } = Astro.props;
---

<div class={`download-split ${className}`.trim()} data-download-widget>
  <a
    id={buttonId}
    href="https://github.com/fum4/OpenKit/releases"
    class="download-main-btn"
    data-download-main
  >
    <svg
      width="18"
      height="18"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
      <polyline points="7 10 12 15 17 10"></polyline>
      <line x1="12" y1="15" x2="12" y2="3"></line>
    </svg>
    <span data-download-label>Download OpenKit</span>
  </a>
  <button
    type="button"
    class="download-toggle-btn"
    data-download-toggle
    aria-label="Choose download option"
    aria-haspopup="listbox"
    aria-expanded="false"
  >
    <svg
      width="16"
      height="16"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </button>
  <div class="download-menu" data-download-menu role="listbox"></div>
</div>
